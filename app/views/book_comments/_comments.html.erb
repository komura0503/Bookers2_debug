<% book.book_comments.each do |book_comment| %>
  <%= link_to user_path(book_comment.user) do %>
    <%= attachment_image_tag(book_comment.user, :profile_image, :fill, 100, 100, fallback: "no-image-icon.jpg") %><br>
    <%= book_comment.user.name %>
  <% end %>
  <%= book_comment.comment %>
  <% if book_comment.user == current_user %>
    <%= link_to "Destroy", book_book_comment_path(book_comment.book.id,book_comment.id), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
  <% end %><br>
<% end %>

<%= form_with(model:[book, book_comment]) do |f| %>
  <%= f.text_area :comment, rows:'5' %>
  <%= f.submit "送信" %>
<% end %>